<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_bg"
    style="@style/TableItemBgStyle">


    <TextView
        android:id="@+id/tv_title"
        style="@style/ZeroMatch.RecyclerItemHeader"
        android:gravity="end|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        tools:ignore="MissingConstraints"
        tools:text="标题：" />

    <TextView
        android:id="@+id/tv_selection"
        style="@style/ZeroMatch.TableText"
        android:layout_marginStart="@dimen/len_72"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginBottom="@dimen/len_10"
        android:background="@drawable/common_btn_ripple_white"
        android:drawableEnd="@drawable/common_ic_list"
        android:gravity="center"
        android:paddingStart="@dimen/len_20"
        android:paddingEnd="@dimen/len_20"
        android:text="点击选择"
        android:textColor="@color/textPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        tools:ignore="MissingConstraints" />

    <include layout="@layout/common_linear_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>