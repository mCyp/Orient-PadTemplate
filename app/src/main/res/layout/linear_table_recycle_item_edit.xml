<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_bg"
    style="@style/TableItemBgStyle"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:minHeight="@dimen/len_72">


    <TextView
        android:id="@+id/tv_title"
        style="@style/ZeroMatch.RecyclerItemHeader"
        android:layout_height="@dimen/len_72"
        android:gravity="end|center_vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        tools:text="标题：" />

    <EditText
        android:id="@+id/et_content"
        style="@style/ZeroMatch.TableText"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_10"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginBottom="@dimen/len_10"
        android:background="@drawable/common_et_bg"
        android:gravity="start|center_vertical"
        android:inputType="textMultiLine"
        android:minHeight="@dimen/len_52"
        android:paddingStart="@dimen/len_10"
        android:paddingEnd="@dimen/len_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="我的哈哈哈哈哈哈" />

    <include
        layout="@layout/common_linear_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>