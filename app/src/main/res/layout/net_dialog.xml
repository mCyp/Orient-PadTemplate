<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/mToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_52"
        android:background="@drawable/common_dialog_top"
        app:title="IP和端口"
        app:titleTextColor="@color/white"/>

    <EditText
        android:id="@+id/et_ip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入IP"
        android:textColorHint="@color/textSecond"
        android:textColor="@color/textPrimary"
        android:padding="@dimen/len_10"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_port"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="请输入端口"
        android:textColorHint="@color/textSecond"
        android:textColor="@color/textPrimary"
        android:padding="@dimen/len_10"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_52"
        android:layout_marginTop="@dimen/len_10"
        android:orientation="horizontal">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/btn_no"
            android:textColor="@color/white"
            android:background="@drawable/common_dialog_bottom_left"
            android:textSize="@dimen/font_16"
            app:gTouchColor="@color/black_alpha_32"
            app:gTouchEffect="press"
            app:gTouchCornerRadius="@dimen/len_20"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"/>


        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_dialog_bottom_right"
            android:gravity="center"
            android:text="@string/btn_yes"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            app:gTouchColor="@color/black_alpha_32"
            app:gTouchEffect="press"
            app:gTouchCornerRadius="@dimen/len_20"/>
    </LinearLayout>

</LinearLayout>