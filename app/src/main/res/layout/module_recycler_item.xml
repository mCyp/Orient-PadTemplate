<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_bg"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:minWidth="250dp"
    android:padding="@dimen/len_4"
    tools:context=".ui.activity.ModuleActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginTop="@dimen/len_20"
        android:background="@color/white"
        android:elevation="@dimen/len_2"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:outlineProvider="background"
        app:cardCornerRadius="@dimen/common_corner_size">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#F4F9FD"
                android:gravity="center"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_large_size"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/iv_content"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="1223" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>