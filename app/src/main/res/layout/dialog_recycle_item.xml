<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/len_128"
    android:layout_marginEnd="@dimen/len_128"
    android:layout_height="@dimen/len_72"
    >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_large_size"
        android:background="@drawable/common_btn_ripple_white"
        tools:text="普通选择"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginEnd="@dimen/len_20"
        android:background="@color/grey_200"/>


</FrameLayout>