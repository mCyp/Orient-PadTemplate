<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:background="@drawable/grid_table_cell_panel_item_bg">

    <ImageView
        android:id="@+id/iv_camera"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_56"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/len_8"
        android:src="@drawable/common_ic_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/len_56"
        android:layout_height="@dimen/len_56"
        android:padding="@dimen/len_8"
        android:src="@drawable/common_ic_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>